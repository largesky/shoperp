<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="4"
    android:orientation="vertical"
    android:rowCount="4">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/order_id"
        android:layout_column="0"
        android:layout_row="0"/>

    <TextView
        android:id="@+id/order_txt_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="0"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/paytime"
        android:layout_column="2"
        android:layout_row="0"/>

    <TextView
        android:id="@+id/order_txt_paytime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="3"
        android:layout_row="0"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="快递："
        android:layout_column="0"
        android:layout_row="1"/>

    <TextView
        android:id="@+id/order_txt_deliverycompany"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="单号："
        android:layout_column="2"
        android:layout_row="1"/>

    <TextView
        android:id="@+id/order_txt_deliverynumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_row="1"
        android:layout_column="3" />

    <TextView
        android:id="@+id/order_txt_goodsinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_columnSpan="4"/>
    <TextView
        android:id="@+id/order_txt_reciverinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="3"
        android:layout_columnSpan="4"/>
</GridLayout>
